<%- include("partials/header") %> 
<%- include("partials/navbar") %> 

    <div class="container">
        <h2>Add Book</h2>
        <form action="/addbook" method="POST" enctype="multipart/form-data">
            <label for="title">Title</label> <br>
            <input type="text" name="title" id="title">
            <br>
            <label for="author">Author</label> <br>
            <input type="text" name="author" id="author">
            <br>
            <label for="description">Description</label> <br>
            <textarea name="description" id="description" cols="40" rows="5"></textarea>
            <br>
            <label for="category">Category</label> <br>
            <select name="category" required id="gender" type="text">
                <option value="fantacy">Fantacy</option>
                <option value="adventure">Adventure</option>
                <option value="mystry">Mystry</option>
                <option value="fiction">Science Fiction</option>
                <option value="cooking">Cooking</option>
                <option value="selfHelp">Self-Help</option>
                <option value="motivational">Motivational</option>
                <option value="health">Health</option>
            </select>
            <br>
            <label for="tags">Tags</label> <br>
            <select name="tags" required id="tags" type="text">
                <option value="onffer">On Offer</option>
                <option value="soldOut">Sold-Out</option>
            </select>
            <br>
            <label for="price">Price</label> <br>
            <input type="number" name="price" id="price">
            <br>
            <label for="image">Upload Image</label> <br>
            <input type="file" name="image" id="image">
            <br> <br>
            <button>Save Book</button>
        </form>
    </div>

<%- include("partials/footer") %> 